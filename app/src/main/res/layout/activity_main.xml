<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:minHeight="350dp"
        android:minWidth="350dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/timerText"
        app:layout_constraintBottom_toBottomOf="@id/timerText"
        android:background="@drawable/circular_shape"
        android:indeterminate="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:textAlignment="center"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:10:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:textSize="48sp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/replayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/start_stopButton"
        app:layout_constraintTop_toTopOf="@id/start_stopButton"
        app:layout_constraintStart_toEndOf="@id/start_stopButton"
        android:layout_marginStart="48dp"
        android:contentDescription="@string/replay_button"
        android:src="@drawable/ic_replay"
        android:scaleType="fitXY"
        app:maxImageSize="30dp"
        app:fabCustomSize="70dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/start_stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/replay_button"
        android:src="@drawable/ic_start"
        app:layout_constraintVertical_bias="0.7"
        android:scaleType="center"
        app:maxImageSize="30dp"
        app:fabCustomSize="70dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pause_playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/start_stopButton"
        app:layout_constraintBottom_toBottomOf="@id/start_stopButton"
        app:layout_constraintTop_toTopOf="@id/start_stopButton"
        android:layout_marginEnd="48dp"
        android:contentDescription="@string/replay_button"
        android:src="@drawable/ic_pause"
        android:scaleType="fitXY"
        app:maxImageSize="30dp"
        app:fabCustomSize="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>